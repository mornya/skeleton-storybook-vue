{
  "name": "skeleton-storybook-vue",
  "version": "2.0.0",
  "description": "The skeleton of StoryBook UI for Vue.js",
  "homepage": "https://github.com/mornya/skeleton-storybook-vue",
  "bugs": "https://github.com/mornya/skeleton-storybook-vue/issues",
  "keywords": [
    "mornya",
    "skeleton",
    "storybook",
    "vue.js",
    "vue3",
    "frontend"
  ],
  "author": "mornya <mornya78@gmail.com>",
  "repository": "https://github.com/mornya/skeleton-storybook-vue.git",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "husky || exit 0",
    "storybook": "nodemon",
    "build-storybook": "storybook build",
    "format": "prettier --write --ignore-path .prettierignore ./.storybook ./src ./types",
    "check": "vue-tsc --noEmit --pretty --project tsconfig.json",
    "lint": "eslint --format codeframe --no-cache .",
    "test": "vitest",
    "sonar": "sonar-scanner"
  },
  "type": "module",
  "engines": {
    "node": ">=20.11 || >=22",
    "pnpm": ">=10"
  },
  "dependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "9.1.16",
    "@storybook/addon-docs": "9.1.16",
    "@storybook/addon-vitest": "9.1.16",
    "@storybook/vue3-vite": "9.1.16",
    "storybook": "9.1.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.3",
    "@vitest/browser": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/reactivity": "^3.5.26",
    "@vue/runtime-core": "^3.5.26",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-formatter-codeframe": "^7.32.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "9.1.16",
    "eslint-plugin-unicorn": "^62",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.16",
    "vue": "^3.5.26",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "nodemonConfig": {
    "ignore": [
      ".idea",
      ".git",
      ".vscode",
      "dist",
      "node_modules",
      "public",
      "src/assets",
      "storybook-static",
      "test",
      "**/*.(test|spec).[t|j]s"
    ],
    "watch": [
      ".storybook",
      "package.json",
      "tsconfig.json",
      "vite.config.ts",
      "vitest.config.js"
    ],
    "ext": "js, ts, tsx, vue, json, mdx",
    "exec": "storybook dev -p 6006 --no-version-updates --disable-telemetry"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
