{
  "name": "skeleton-storybook-vue",
  "version": "2.0.0",
  "description": "The skeleton of StoryBook UI for Vue.js",
  "homepage": "https://github.com/mornya/skeleton-storybook-vue",
  "bugs": "https://github.com/mornya/skeleton-storybook-vue/issues",
  "keywords": [
    "mornya",
    "skeleton",
    "storybook",
    "vue.js",
    "vue3",
    "frontend"
  ],
  "author": "mornya <mornya78@gmail.com>",
  "repository": "https://github.com/mornya/skeleton-storybook-vue.git",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "husky || exit 0",
    "storybook": "nodemon",
    "build-storybook": "storybook build",
    "format": "prettier --write --ignore-path .prettierignore ./.storybook ./src ./types",
    "check": "vue-tsc --noEmit --pretty --project tsconfig.json",
    "lint": "eslint --format codeframe",
    "test": "vitest",
    "sonar": "sonar-scanner"
  },
  "type": "module",
  "engines": {
    "node": ">=20.11 || >=22",
    "npm": ">=6"
  },
  "dependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@storybook/addon-a11y": "^9",
    "@storybook/addon-controls": "^9",
    "@storybook/addon-docs": "^9",
    "@storybook/addon-toolbars": "^9",
    "@storybook/addon-viewport": "^9",
    "@storybook/addon-vitest": "^9",
    "@storybook/vue3-vite": "^9",
    "storybook": "^9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue-jsx": "^5.0.0",
    "@vitest/browser": "^4.0.10",
    "@vitest/coverage-v8": "^4.0.10",
    "@vue/reactivity": "^3.5.24",
    "@vue/runtime-core": "^3.5.24",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9",
    "eslint-formatter-codeframe": "^7.32.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.11",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "sass": "^1.94.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vite-plugin-vue-devtools": "^7",
    "vitest": "^4.0.10",
    "vue": "^3.5.24",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "nodemonConfig": {
    "ignore": [
      ".idea",
      ".git",
      ".vscode",
      "dist",
      "node_modules",
      "public",
      "src/assets",
      "storybook-static",
      "test",
      "**/*.(test|spec).[t|j]s"
    ],
    "watch": [
      ".storybook",
      "package.json",
      "tsconfig.json",
      "vite.config.ts",
      "vitest.config.js"
    ],
    "ext": "js, ts, tsx, vue, json, mdx",
    "exec": "storybook dev -p 6006 --no-version-updates --disable-telemetry"
  },
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
